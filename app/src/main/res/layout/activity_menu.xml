<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="TextView" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_today"
            android:id="@+id/Cita"
            android:contentDescription="@string/icon_cita"
            android:layout_marginStart="86dp"
            android:onClick="PedirCita"/>

        <TextView
            android:text="@string/icon_cita"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ViewCita"
            android:layout_marginTop="14dp"
            android:layout_marginStart="3dp"
            android:layout_weight="0.36" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_search"
            android:id="@+id/Historial"
            android:contentDescription="@string/icon_historial"
            android:layout_marginTop="20dp"
            android:layout_marginStart="86dp"
            android:onClick="Historial"/>
        <TextView
            android:text="@string/icon_historial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ViewHistorial"
            android:layout_marginTop="35dp"
            android:layout_marginStart="3dp"
            android:layout_weight="0.21" />
    </LinearLayout>
</LinearLayout>